page {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #F6F6F6;
}

.img-plus-style {
  height: 120rpx;
  width: 120rpx;
  position: fixed;
  bottom: 200rpx;
  right: 100rpx;
  z-index: 100;
}

image.img-plus-style  {
  border-radius: 100px;
  box-shadow: 0px 0px 5px 1px #ccc;
}
 
.img-style {
  height: 120rpx;
  width: 120rpx;
  position: fixed;
  bottom: 200rpx;
  right: 100rpx;
  opacity: 0;
  z-index: 100;
}

.card_panel {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 100%;
}

.card, .card .photo {
  border-radius: 10px;
}

.card {
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0px 0px 5px 3px #ccc;
  z-index: 10;
}

.card .photo {
  display: block;
  width: 100%;
  z-index: 10;
  box-shadow: 0px 2px 1px #ccc;
}

.result_panel {
  position: absolute;
  top: 60rpx;
  left: 60rpx;
  z-index: 80;
}

.result {
  color: white;
  text-shadow: 0px 0px 5px red;
  font-size: 30rpx;
}

.result text {
  display: block;
}

.result, .result text {
  margin-bottom: 5rpx;
}

.unpopping {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 90;
}

.bottom_panel {
  width: 95%;
  height: 210rpx;
  margin-top: -10rpx;
  padding-top: 10rpx;
  background-color: #FFF;
  border-radius: 0px 0px 10px 10px;
  box-shadow: 0px 0px 5px 3px #ccc;
  z-index: 5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom_result_panel {
  width: 90%;
  height: 90%;
  flex-wrap: wrap;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.bottom_result_panel .bottom_result text {
  font-size: 30rpx;
  display: block;
  opacity: 0.9;
}

.bottom_result_panel_column {
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.qrcode {
  width: 160rpx;
  flex-direction: row;
  justify-content: flex-start;
}

.show {
  display: block;
}

.hidden {
  display: none;
}